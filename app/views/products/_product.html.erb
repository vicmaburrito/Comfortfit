<div class="container mt-5" id="<%= dom_id product %>">
    <div class="card card-product">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center">
                      <% if @product.images.attached? %>
                        <%= image_tag url_for(@product.images[0]), width:'300px', class: "rounded" %>
                      <% end %>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h3 class="card-title mt-5 navbar-title"><%= @product.name %></h3>
                    <span class="navbar-title price">
                      <b>$<%= @product.price %>.MX</b>
                      <del class="color-muted fs-lg me-3">$500.MX</del>
                    </span>
                    <div class="bord mt-5 mb-3"></div>
                    <p class="product-description"><%= @product.description %></p>
                    <h3 class="box-title mt-5">Stock:</h3>
                    <ul class="list-unstyled">
                        <li><%= @product.stock %> piezas</li>
                    </ul>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Talla: </td>
                                    <td><%= @product.size.capitalize %></td>
                                </tr>
                                <tr>
                                    <td>Colores: </td>
                                    <td><%= product.color %></td>
                                </tr>
                                <tr>
                                    <td>Seat Lock Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Type</td>
                                    <td>Office Chair</td>
                                </tr>
                                <tr>
                                    <td>Style</td>
                                    <td>Contemporary&amp;Modern</td>
                                </tr>
                                <tr>
                                    <td>Wheels Included</td>
                                    <td>Yes</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <% if user_signed_in? %>
                  <div class="pt-4 col-md-6 offset-md-4">
                    <%= link_to 'Editar', edit_product_path(@product), class: " btn btn-warning" %>
                    <%= link_to "Eliminar Producto", @product, method: :delete, data: { confirm: '¿Estás seguro de eliminar este producto?'}, class: "btn btn-danger" %>
                    <%= link_to 'Volver', products_path, class: "btn btn-dark" %>
                  </div>
                <%end%>
            </div>
        </div>
    </div>
</div>

