<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
  <span> colors: </span>
    <% Product::COLORS.each do |key| %>
        <%= form.check_box :colors, { multiple: true, checked: form.object.colors&.include?(key.to_s) }, key, nil %>
        <%= form.label key %>
    <% end %>
  </div>

  <div>
    <%= form.label :size, style: "display: block" %>
    <%= form.text_field :size %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :stock %>
  </div>

  <div class="field">
    <%= form.file_field :images, multiple: true %>
  </div>

  <%#binding.pry%>
    <%if @product.images.attached?%>
      <%@product.images.each do |image| %>
          <%= image_tag url_for(image), class: "rounded w-25" %>
      <%end%>
    <%end%>
  <div>

    <%= form.submit %>
  </div>

<% end %>
